{
  "extends": "eslint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-var": "warn",
    "require-jsdoc": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-multi-spaces": ["error"]
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "999.999.999" // resolves warning about React version
    }
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}
